import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.PasswordField;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.StackPane;
import javafx.stage.Stage;
import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class Login extends Application {

    private Stage stage;
    private Scene createLoginScene;
    private Scene loginScene;

    @Override
    public void start(Stage primaryStage) {
        this.stage = primaryStage;
        primaryStage.setTitle("Login Page");

        GridPane createLoginGrid = new GridPane();
        createLoginGrid.setHgap(10);
        createLoginGrid.setVgap(10);

        Label newEmailLabel = new Label("New Email:");
        createLoginGrid.add(newEmailLabel, 0, 0);

        TextField newEmailField = new TextField();
        createLoginGrid.add(newEmailField, 1, 0);

        Label newPasswordLabel = new Label("New Password:");
        createLoginGrid.add(newPasswordLabel, 0, 1);

        PasswordField newPasswordField = new PasswordField();
        createLoginGrid.add(newPasswordField, 1, 1);

        Button createLoginButton = new Button("Create Login");
        createLoginGrid.add(createLoginButton, 1, 2);

        createLoginButton.setOnAction(e -> {
            String email = newEmailField.getText();
            String password = newPasswordField.getText();
            User user = new User(email, password);
            user.saveToFile();
            System.out.println("Account Created: " + user.getEmail());
            stage.setScene(loginScene); 
        });

        createLoginScene = new Scene(createLoginGrid, 300, 200);

        
        GridPane loginGrid = new GridPane();
        loginGrid.setHgap(10);
        loginGrid.setVgap(10);

        Label emailLabel = new Label("Email:");
        loginGrid.add(emailLabel, 0, 0);

        TextField emailField = new TextField();
        loginGrid.add(emailField, 1, 0);

        Label passwordLabel = new Label("Password:");
        loginGrid.add(passwordLabel, 0, 1);

        PasswordField passwordField = new PasswordField();
        loginGrid.add(passwordField, 1, 1);

        Button loginButton = new Button("Login");
        loginGrid.add(loginButton, 1, 2);

        loginButton.setOnAction(e -> {
            String email = emailField.getText();
            String password = passwordField.getText();

            if (User.verifyLogin(email, password)) {
                System.out.println("User Logged In: " + email);

                
                StackPane successPane = new StackPane();
                successPane.getChildren().add(new Label("Login Complete"));
                Scene successScene = new Scene(successPane, 300, 200);
                stage.setScene(successScene);
            } else {
                System.out.println("Login Failed: Invalid email or password.");
            }
        });

        loginScene = new Scene(loginGrid, 300, 200);

        
        primaryStage.setScene(createLoginScene);
        primaryStage.show();
    }
    public static void main(String[] args) {
        launch(args);
    }
}

