"MAX"
public class Exercise19_05 {
  public static void main(String[] args) {
    Integer[] numbers = {1, 2, 3};
    System.out.println("Max number: " + max(numbers));

    String[] words = {"red", "green", "blue"};
    System.out.println("Max word: " + max(words));

    Circle[] circles = {new Circle(3), new Circle(2.9), new Circle(5.9)};
    System.out.println("Max circle: " + max(circles));
  }

  public static <E extends Comparable<E>> E max(E[] list) {
    if (list == null || list.length == 0) {
        return null; // or throw an exception
    }

    E max = list[0];
    for (E element : list) {
        if (element.compareTo(max) > 0) {
            max = element;
        }
    }
    return max;
  }

  static class Circle implements Comparable<Circle> {
    double radius;

    public Circle(double radius) {
      this.radius = radius;
    }

    @Override
    public int compareTo(Circle c) {
      return Double.compare(this.radius, c.radius);
    }

    @Override
    public String toString() {
      return "Circle radius: " + radius;
    }
  }
}




	
